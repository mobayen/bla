{
    "comments": {
        "blockComment": [ "{{--", "--}}" ]
    },
    
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],

        ["@if", "@endif"],

        ["@foreach", "@endforeach"],
        ["@forelse", "@endforelse"],
        ["@for", "@endfor"],
        ["@switch", "@endswitch"],
        ["@case", "@break"],
        ["@while", "@endwhile"],

        ["@section", "@show"],
        ["@section", "@endsection"],
        ["@hasSection", "@endif"],
        ["@sectionMissing", "@endif"],

        ["@error", "@enderror"],
        ["@push", "@endpush"],
        ["@prepend", "@endprepend"],
        ["@env", "@endenv"],
        ["@slot", "@endslot"],

        ["@verbatim", "@endverbatim"],
        ["@unless", "@endunless"],
        ["@isset", "@endisset"],
        ["@empty", "@endempty"],
        ["@auth", "@endauth"],
        ["@guest", "@endguest"],
        ["@production", "@endproduction"],
        ["@env", "@endenv"],
        ["@php", "@endphp"],
        ["@once", "@endonce"]
    ],

    "autoCloseBefore": ";:.,=}])><` \n\t\"'",
    
    "autoClosingPairs": [
        ["{!!", " !!"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],

        { "open": "@php", "close": "@endphp" ,  "notIn": ["comment"] },
        { "open": "<?php", "close": "?>" ,  "notIn": ["comment"] }
    ],

    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ]
}